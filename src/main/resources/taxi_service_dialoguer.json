{
    "handler" : {
        "name" : "taxi_service",
        "path" : "taxi_service_handler.json"
    },
    "analysers" : [
        {"name" : "simple_cancel",
         "sourceId" : "simple_cancel"
        },
        {"name" : "simple_yes_no",
         "sourceId" : "simple_yes_no"
        },
        {
            "name" : "wit.ai",
            "path" : "taxi_service_wit_config.json",
            "sourceId" : "wit.ai"
        }
    ],
    "humanReadableSlotNames" : {
        "yes_no" : "yes or no",
        "from" : "pickup location",
        "to" : "destination"
    },
    "necessarySlotsPerIntent" :{
        "order_taxi" : ["from", "to"]
    },
    "responseTemplates" : {
        "confirm_cancellation" : {
            "templates":[
                "Cancelled. Thanks.",
                "Cancelled. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
            },
        "confirm_completion" : {
            "templates":[
                "Completed. Thanks.",
                "Completed. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
            },
        "unknown" : {
            "templates" : [
                "I don't know how to handle that request.",
                "I don't understand.  Please try again."
                ],
            "newStates":["initial"],
            "requestingYesNo":"no"
            },
        "auto_query" : {
            "templates":[
                "Please specify {query}"
                ],
            "requestingYesNo":"no"
            },
        "request_confirm" : {
            "templates":[
                "Please confirm that you want a taxi from {from} to {to} (capacity: {number}, time: {datetime})"
                ],
            "requestingYesNo":"yes",
            "newStates":["followup"]
        },
        "choose_capacity": {
            "templates":[
                "Choose capacity: {number}"
                ],
            "requestingYesNo":"no"
        },
        "choose_time":{
            "templates":[
                "Choose time: {datetime}"
                ],
            "requestingYesNo":"no"
        },
        "choose_destination":{
            "templates":[
                "Choose destination location: {to}"
                ],
            "requestingYesNo":"no"
        },
        "choose_pickup":{
            "templates":[
                "Choose pickup location: {from}"
                ],
            "requestingYesNo":"no"
        },
        "respecify_destination":{
            "templates":[
                "Respecify destination location."
                ],
            "requestingYesNo":"no"
        },
        "respecify_pickup":{
            "templates":[
                "Respecify pickup location."
                ],
            "requestingYesNo":"no"
        }


    }
}