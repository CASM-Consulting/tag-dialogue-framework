{
    "handler" : {
        "name" : "product_search",
        "path" : "product_search_handler.json"
    },
    "analysers" : [
        {"name" : "simple_cancel",
         "sourceId" : "simple_cancel"
        },
        {"name" : "simple_choice",
         "sourceId" : "simple_choice"},
        {"name" : "simple_yes_no",
         "sourceId" : "simple_yes_no"
        },
        {
            "name" : "wit.ai",
            "path" : "product_search_wit_config.json",
            "sourceId" : "wit.ai"
        },
        {
            "name" : "pattern_finder",
            "path" : "gift_pattern_analyser_config.json",
            "sourceId" : "gift"
        }
    ],
    "humanReadableSlotNames" : {
        "yes_no" : "yes or no",
        "product_query" : "product"
    },
    "necessarySlotsPerIntent" : {
        "confirm" : ["yes_no"],
        "really_buy" : ["product_query","contact","message_body"]
    },
    "responseTemplates" : {
        "confirm_cancellation" : {
            "templates":[
                "Cancelled. Thanks.",
                "Cancelled. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
        },
        "confirm_completion" : {
            "templates":[
                "Completed. Thanks.",
                "Completed. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
        },
        "confirm_buy_no_message" : {
            "templates":[
                "Please confirm that you wish to buy {product_query} for {contact}"
            ],
            "newStates":[confirm_yes_no,confirm_contact_details,confirm_product_query],
            "requestingYesNo":"yes"
        },
        "confirm_buy" : {
            "templates":[
                "Please confirm that you wish to buy {product_query} for {contact} with message \"{message_body}\""
            ],
            "newStates":[confirm_yes_no,confirm_contact_details,confirm_product_query,confirm_message_body],
            "requestingYesNo":"yes"
        },
        "confirm_product" : {
            "templates":[
                "Do you you wish to buy {product_query}?"
                ],
            "newStates":["confirm_yes_no","confirm_product_query"],
            "requestingYesNo":"yes"

        },
        "confirm_recipient" : {
            "templates":[
                "Should your purchase go to {contact}?"
                ],
            "newStates":["confirm_yes_no","confirm_contact_details"],
            "requestingYesNo":"yes"
        },
        "confirm_message" : {
            "templates":[
                "Should the message be \"{message_body}\"?"
                ],
            "newStates":["confirm_yes_no","confirm_message_body"],
            "requestingYesNo":"yes"
        },
        "unknown_recipient" : {
            "templates":[
                "{contact} not in database.  Respecify recipient?"
            ],
            "newStates":["confirm_contact_details"],
            "requestingYesNo":"no"
        },
        "request_recipient" : {
            "templates":[
                "Please specify recipient of purchase."
             ],
             "newStates":["confirm_contact_details"],
             "requestingYesNo":"no"
        },
        "request_message" : {
            "templates":[
                "Please specify the message to go with your gift."
                ],
                "newStates":["confirm_message_body"],
                "requestingYesNo":"no"
        },
        "respecify_product" : {
            "templates":[
                "Cannot find match for {product_query}.  Please respecify product."
                ],
            "newStates":["confirm_product_query"],
            "requestingYesNo":"no"
        },
        "choose_product" : {
            "templates" :["Please choose {product_id}"
            ],
            "newStates":["confirm_choice"],
            "requestingYesNo":"no"

        },
        "repeat_choice" : {
            "templates" :["Quit to start again or select {product_id}"
            ],
            "newStates":["confirm_choice"],
            "requestingYesNo":"no"

        },
        "unknown" : {
            "templates" : [
                "I don't know how to handle that request.",
                "I don't understand.  Please try again."
                ],
            "newStates":["initial_query"],
            "requestingYesNo":"no"
        },
        "auto_query" : {
            "templates":[
                "Please specify {query}"
                ],
            "requestingYesNo":"no"
            }
    }

}