{
    "handler" : {
        "name" : "paypal_checkin",
        "path" : "paypal_checkin_handler.json"
    },
    "analysers" : [
        {"name" : "simple_cancel"},
        {"name" : "simple_choice"},
        {"name" : "simple_yes_no",
         "sourceId" : "simple_yes_no"
        },
        {
            "name" : "wit.ai",
            "path" : "paypal_checkin_wit_config.json",
            "sourceId" : "wit.ai"
        }
    ],
    "humanReadableSlotNames" : {
        "local_search_query" : "location",
