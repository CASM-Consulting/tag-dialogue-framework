{
    "handler" : {
        "name" : "product_search",
        "path" : "product_search_handler.json"
    },
    "analysers" : [
        {"name" : "simple_cancel",
         "sourceId" : "simple_cancel"
        },
        {"name" : "simple_choice"},
        {"name" : "simple_yes_no",
         "sourceId" : "simple_yes_no"
        },
        {
            "name" : "wit.ai",
            "path" : "product_search_wit_config.json",
            "sourceId" : "wit.ai"
        },
        {
            "name" : "pattern_finder",
            "path" : "gift_pattern_analyser_config.json",
            "sourceId" : "gift"
        }
    ],
    "humanReadableSlotNames" : {
        "yes_no" : "yes or no",
        "product_name" : "product name"
    },
    "necessarySlotsPerIntent" : {
        "confirm" : ["yes_no"],
        "really_buy" : ["product_name","recipient","message"]
    },
    "responseTemplates" : {
        "confirm_cancellation" : {
            "templates":[
                "Cancelled. Thanks.",
                "Cancelled. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
        },
        "confirm_completion" : {
            "templates":[
                "Completed. Thanks.",
                "Completed. Bye!"
            ],
            "newStates":[],
            "requestingYesNo":"no"
        },
        "confirm_buy_no_message" : {
            "templates":[
                "Please confirm that you wish to buy {product_name} for {recipient}"
            ],
            "newStates":[],
            "requestingYesNo":"yes"
        },
        "confirm_buy" : {
            "templates":[
                "Please confirm that you wish to buy {product_name} for {recipient} with message {message}"
            ],
            "newStates":[],
            "requestingYesNo":"yes"
        },
        "unknown_recipient" : {
            "templates":[
                "{recipient} not in database.  Add details or respecify recipient?"
            ],
            "newStates":["unknown_recipient"],
            "requestingYesNo":"no"

        },
        "unknown" : {
            "templates" : [
                "I don't know how to handle that request.",
                "I don't understand.  Please try again."
                ],
            "newStates":["initial_query"],
            "requestingYesNo":"no"
        },
        "auto_query" : {
            "templates":[
                "Please specify {query}"
                ],
            "requestingYesNo":"no"
            }
    }

}